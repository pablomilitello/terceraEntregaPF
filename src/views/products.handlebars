{{#if products.length}}
  <h2 align='center'>Paginated list of existing products</h2>

  <table class='table' id='table' cellPadding='10' border='1' align='center'>
    <thead>
      <tr>
        <th>#id</th>
        <th>Product</th>
        <th>Description</th>
        <th>Price</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody id='productsTable'>
      {{#each products}}
        <tr>
          <td>{{id}}</td>
          <td>{{title}}</td>
          <td>{{description}}</td>
          <td>${{price}}</td>
          <td><button class='add-to-cart' data-id='{{id}}'>Add To Cart</button></td>
        </tr>
      {{/each}}
    </tbody>
    <tfoot>
      <tr>
        <td colspan='5' align='center'>
          {{#if hasPrevPage}}
            <a href='/views/products?page={{prevPage}}'>Prev</a>
          {{/if}}
          {{#if hasNextPage}}
            <a href='/views/products?page={{nextPage}}'>Next</a>
          {{/if}}
        </td>
      </tr>
    </tfoot>
  </table>
{{else}}
  <h2>No products found</h2>
{{/if}}

<script src='/socket.io/socket.io.js'></script>
<script src='/js/index.js'></script>